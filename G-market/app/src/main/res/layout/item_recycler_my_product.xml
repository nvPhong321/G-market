<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <RelativeLayout
        android:background="@drawable/white_grey_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:scaleType="centerInside"
                    android:id="@+id/imv_my_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:src="@drawable/smart_phone" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="5dp">
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_my_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="điện thoại"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="324dp"
                            tools:layout_editor_absoluteY="93dp" />

                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/tv_my_product_cost"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_my_product_name"
                            android:text="1.750.000"
                            android:textColor="@android:color/holo_red_dark" />
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_my_product_name"
                            android:layout_toRightOf="@id/tv_my_product_cost"
                            android:text=" đ"
                            android:textColor="@android:color/holo_red_dark" />

                        <TextView
                            android:id="@+id/tv_amount_myProduct"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_my_product_name"
                            android:layout_alignParentRight="true"
                            android:text="15"
                            android:textColor="@android:color/holo_red_dark" />

                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_my_product_name"
                            android:layout_toLeftOf="@id/tv_amount_myProduct"
                            android:text="Số lượng "
                            android:textColor="@android:color/holo_red_dark" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/dotted"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/gray_border"
                            android:text="Shop"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_my_product_shop"
                            android:layout_toRightOf="@+id/tv_shop"
                            android:layout_alignParentBottom="true"
                            android:textSize="10sp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Shop abc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_my_product_categories"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>